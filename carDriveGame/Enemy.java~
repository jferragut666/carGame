package carDriveGame;
import org.newdawn.slick.Image;

public class Enemy{
   
  int x,y; 
  Image enemySprite;
  String name;
  float scale;

  public Enemy(int x, int y, Image enemySprite, String name, float scale){
    this.x = x;
    this.y = y;
    this.enemySprite = enemySprite;
    this.name = name;
    this.scale = scale;
    if(this.x > 91+173/2
  }
  public int getX(){
    return x;
  }
  public int getY(){
    return y;
  }
  public void setX(int x){
    this.x = x; 
  }
  public void setY(int y){
    this.y = y;
  }
  public Image getImage(){
    return enemySprite;
  }
  public float getScale(){
    return scale;
  }
  public void move(){
    if(264>x>131)
      y+=5;
    y+=5;
    x-=2;
    if(scale<=(float).1)
      scale = (float).1;
    else
      scale+=(float).005;
  }
}

